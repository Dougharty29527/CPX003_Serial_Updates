#:kivy 2.3.0

<SideBar>

    MDScreenManager:

        MDScreen:

            MDBoxLayout:
                padding: '12dp'

                MDBoxLayout:
                    id: closed_nav
                    size_hint_x: None
                    adaptive_height: True
                    md_bg_color: app.theme_cls.secondaryContainerColor
                    width: '50dp'
                    orientation: 'vertical'
                    pos_hint: {'center_y': .5}
                    radius: '12dp'
                    padding: ['6dp', ]
                    spacing: '12dp'

                    MDIconButton:
                        icon: 'menu-close'
                        on_release:
                            self.toggled = True
                            open_nav.set_state('toggle')


    MDNavigationDrawer:
        id: open_nav
        width: '260dp'
        #md_bg_color: app.theme_cls.secondaryContainerColor
        radius: 0, '16dp', '16dp', 0

        MDNavigationDrawerMenu:
            id: open_nav_drawer
            padding: '8dp'
            spacing: '24dp'

            MDNavigationDrawerHeader:
                padding: 0, 0, 0, '16dp'

                # MDLabel:
                #     text: 'VST'
                #     font_style: 'Display'
                #     role: 'small'
                #     theme_line_height: 'Custom'
                #     line_height: 0
                #     adaptive_height: True
                #     theme_text_color: 'Custom'
                #     text_color: self.theme_cls.primaryColor

                MDIconButton:
                    icon: 'backburger'
                    on_release:
                        self.toggled = False
                        open_nav.set_state('toggle')
                    pos_hint: {'top': 1}

        MDIconButton:
            icon: 'account-cog'
            pos_hint: {'bottom': 1, 'right': 1}