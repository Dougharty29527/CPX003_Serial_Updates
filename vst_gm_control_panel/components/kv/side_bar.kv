#:kivy 2.3.0

<SideBar>

    MDScreenManager:

        MDScreen:

            MDBoxLayout:
                padding: '12dp'

                MDBoxLayout:
                    id: closed_nav
                    size_hint_x: None
                    adaptive_height: True
                    md_bg_color: app.theme_cls.secondaryContainerColor
                    width: '50dp'
                    orientation: 'vertical'
                    pos_hint: {'center_y': .5}
                    radius: '12dp'
                    padding: ['6dp', ]
                    spacing: '12dp'

                    MDIconButton:
                        icon: 'menu-close'
                        on_release:
                            self.toggled = True
                            side_nav.set_state('toggle')


    MDNavigationDrawer:
        id: side_nav
        width: '225dp'
        # pos_hint: {'center_x': .108, 'center_y': .5} if root.toggled else {'center_y': .5}
        md_bg_color: app.theme_cls.secondaryContainerColor
        radius: '8dp'

        MDIconButton:
            icon: 'backburger'
            on_release:
                self.toggled = False
                side_nav.set_state('toggle')
            pos_hint: {'top': 1}

        MDNavigationDrawerMenu:
            id: side_nav_menu
            padding: 0, 0, '12dp', 0
            spacing: '12dp'

        MDIconButton:
            icon: 'account-cog'
            pos_hint: {'bottom': 1, 'right': 1}