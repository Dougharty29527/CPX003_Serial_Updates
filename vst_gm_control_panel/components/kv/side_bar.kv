#:kivy 2.3.0

<SideBar>

    MDScreenManager:

        MDScreen:

            MDBoxLayout:
                padding: '12dp'

                MDBoxLayout:
                    id: closed_nav
                    size_hint_x: None
                    adaptive_height: True
                    # md_bg_color: app.theme_cls.secondaryContainerColor
                    md_bg_color: app.theme_cls.surfaceContainerLowColor
                    width: '50dp'
                    orientation: 'vertical'
                    pos_hint: {'center_y': .5}
                    radius: '12dp'
                    padding: ['6dp', ]
                    spacing: '12dp'

                    MDIconButton:
                        id: open_nav_button
                        icon: 'menu-close'
                        on_release:
                            self.toggled = True
                            open_nav.set_state('toggle')


    MDNavigationDrawer:
        id: open_nav
        # width: '260dp'
        #md_bg_color: app.theme_cls.secondaryContainerColor
        radius: 0, '12dp', 0, 0

        MDNavigationDrawerMenu:
            id: open_nav_drawer
            padding: '8dp', 0, 0, 0

            MDNavigationDrawerHeader:

                MDIconButton:
                    id: close_nav_button
                    icon: 'backburger'
                    on_release:
                        self.toggled = False
                        open_nav.set_state('toggle')

        MDIconButton:
            id: settings_button
            icon: 'account-cog'
            pos_hint: {'bottom': 1, 'right': 1}
            on_press: app.settings.settings_menu(self)