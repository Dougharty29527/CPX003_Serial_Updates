#:kivy 2.3.0

<StatusBar>:
    md_bg_color: self.theme_cls.primaryContainerColor
    orientation: 'vertical'
    pos_hint: {'center_x': .5, 'center_y': .5}
    adaptive_size: True
    radius: '8dp'
    padding: ['16dp', 0, '16dp', 0]
    spacing: 0

    MDBoxLayout:
        adaptive_size: True
        orientation: 'horizontal'
        pos_hint: {'center_x': .5}
        padding: 0

        MDButton:
            style: 'text'
            disabled: True

            MDButtonText:
                id: gm_status
                text: 'GREEN MACHINE STATUS'
                font_style: 'Headline'
                theme_font_size: 'Custom'
                font_size: '18sp'
                theme_disabled_color: 'Custom'
                disabled_color: app.theme_cls.onPrimaryContainerColor

    MDBoxLayout:
        adaptive_size: True
        orientation: 'horizontal'
        pos_hint: {'center_x': .5}
        padding: 0

        MDButton:
            style: 'text'
            disabled: True

            MDButtonText:
                id: gm_idle
                text: app.gm_status
                font_style: 'Display'
                theme_font_size: 'Custom'
                font_size: '38sp'
                theme_disabled_color: 'Custom'
                disabled_color: '#00FF7F' if not app.alarm else '#B22222'

    # MDDivider:
    #     size_hint_x: .7
    #     pos_hint: {'center_x': .5}
    #     color: app.theme_cls.secondaryColor


    MDBoxLayout:
        adaptive_size: True
        orientation: 'horizontal'
        pos_hint: {'center_x': .5}
        padding: 0

        MDButton:
            style: 'text'

            MDButtonText:
                id: recent
                text: 'NO RECENT NOTIFICATIONS'
                font_style: 'Title'
                theme_font_size: 'Custom'
                font_size: '12sp'
                theme_disabled_color: 'Custom'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.secondaryColor
                radius: 0

<StatusBarSmall>:
    orientation: 'horizontal'
    adaptive_width: True
    size_hint_y: None
    height: '32dp'
    spacing: 0

    MDBoxLayout:
        pos_hint: {'center_x': .5}

        MDLabel:
            text: 'GM: '
            font_style: 'Headline'
            theme_font_size: 'Custom'
            font_size: '12sp'
            text_theme_color: 'Custom'
            text_color: app.theme_cls.onPrimaryContainerColor
            padding: 0

        MDLabel:
            text: app.gm_status
            font_style: 'Headline'
            theme_font_size: 'Custom'
            font_size: '12sp'
            text_theme_color: 'Custom'
            text_color: app.theme_cls.onPrimaryContainerColor
            padding: 0