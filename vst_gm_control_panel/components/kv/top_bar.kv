#:kivy 2.3.0

<TopBar>:
    md_bg_color: self.theme_cls.primaryContainerColor
    size_hint_y: None
    pos_hint: {'top': 1}
    height: '62dp'
    padding: '12dp', 0, '12dp', 0
    screen_title: ''

    MDBoxLayout:
        size_hint_x: .17

        Image:
            source: 'assets/images/vst_light.png' if app.theme_cls.theme_style == 'Dark' else 'assets/images/vst_dark.png'
            size_hint: None, None
            size: '67dp', '47dp'
            pos_hint: {'center_y': .5}

    MDBoxLayout:
        size_hint_x: .66
        adaptive_height: True

        MDLabel:
            text: root.screen_title
            font_style: 'Headline'
            role: 'large'
            halign: 'center'
            text_color: self.theme_cls.onPrimaryContainerColor

    MDBoxLayout:
        size_hint_x: .17
        orientation: 'vertical'
        padding: 0, '12dp', 0, '12dp'

        MDLabel:
            text: app.current_date
            text_color: self.theme_cls.onPrimaryContainerColor
            style: 'Title'
            role: 'small'
            halign: 'center'
            padding: 0

        MDLabel:
            text: app.current_time
            text_color: self.theme_cls.onPrimaryContainerColor
            style: 'Display'
            role: 'large'
            halign: 'center'
            padding: 0
