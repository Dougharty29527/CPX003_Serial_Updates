#:kivy 2.3.0

<OOBEOverfillOverrideScreen>
    md_bg_color: '#13202E'

    TopBar:

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'top': .975, 'center_x': .5}
        StatusBar:

    MDBoxLayout:
        adaptive_size: True
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: '30dp'

        MDBoxLayout:
            adaptive_size: True
            orientation: 'vertical'
            spacing: dp(12)
            pos_hint: {'center_x': .5}
            padding: [0, dp(50), 0, 0]
        
            MDLabel:
                id: overfill_override_title
                text: app.language_handler.translate('overfill_override_title', 'OVERFILL OVERRIDE')
                font_style: 'Headline'
                role: 'medium'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.secondaryColor
                adaptive_size: True
                pos_hint: {'center_x': .5}
            
            MDBoxLayout:
                adaptive_size: True
                orientation: 'vertical'
                spacing: dp(8)
                pos_hint: {'center_x': .5}
                padding: [dp(12), dp(12), dp(12), 0]
                
                MDBoxLayout:
                    adaptive_size: True
                    orientation: 'vertical'
                    spacing: dp(8)
                    pos_hint: {'center_x': .5}
                    
                    # Nine lines for the description
                    MDLabel:
                        id: overfill_override_description_line1
                        text: app.language_handler.translate('overfill_override_description_line1', 'CONFIGURE THE N.C. OUTPUT RELAY IN THE TANK MONITORING SYSTEM')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.primaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                    
                    MDLabel:
                        id: overfill_override_description_line2
                        text: app.language_handler.translate('overfill_override_description_line2', 'TO OPEN WHEN THE TANK REACHES 90% VOLUME.')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.primaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        
                    MDLabel:
                        id: overfill_override_description_line3
                        text: app.language_handler.translate('overfill_override_description_line3', 'TESTING THIS RELAY DURING SETUP SHOULD TRIGGER')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.secondaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                    
                    MDLabel:
                        id: overfill_override_description_line4
                        text: app.language_handler.translate('overfill_override_description_line4', 'AN OVERFILL ALARM ON THE GREEN MACHINE CONTROL PANEL.')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.secondaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        
                    MDLabel:
                        id: overfill_override_description_line5
                        text: app.language_handler.translate('overfill_override_description_line5', 'THE CONFIRM OVERRIDE SHOULD ONLY BE USED')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.primaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        
                    MDLabel:
                        id: overfill_override_description_line6
                        text: app.language_handler.translate("overfill_override_description_line6", "AFTER THE TANK MONITORING SYSTEM'S OUTPUT RELAY")
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.primaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        
                    MDLabel:
                        id: overfill_override_description_line7
                        text: app.language_handler.translate('overfill_override_description_line7', 'HAS BEEN DEACTIVATED')
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.primaryColor
                        adaptive_size: True
                        size_hint_x: .9
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        
                    # Lines 8 and 9 removed as requested
                
                # Override button
                MDBoxLayout:
                    adaptive_size: True
                    orientation: 'horizontal'
                    spacing: dp(20)
                    pos_hint: {'center_x': .5}
                    padding: [0, dp(20), 0, 0]
                    
                    DefaultBtn:
                        id: confirm_override
                        text: app.language_handler.translate('confirm_override', 'CONFIRM OVERRIDE')
                        width: dp(250)
                        md_bg_color: '#253849'
                        disabled: not root.continue_enabled
                        on_press: root.show_override_dialog()
    
    # Back button
    MDBoxLayout:
        adaptive_size: True
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .09}
        padding: [0, '27dp', 0, 0]

        BackBtn:
            on_press: root.go_back()

    StatIndicator: