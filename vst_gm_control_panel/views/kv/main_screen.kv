#:kivy 2.3.0

<MainScreen>
    md_bg_color: app.theme_cls.onPrimaryColor

    TopBar:
        id: main_screen
        screen_title: app.translate('main', 'main').upper()

    MDBoxLayout:
        adaptive_size: True
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: '30dp'

        # MDBoxLayout:
        #     size_hint_y: None
        #     height: '55dp'

        MDBoxLayout:
            adaptive_size: True
            orientation: 'horizontal'

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    id: pressure
                    text: app.translate('pressure', 'pressure').upper()
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    text: app.current_pressure
                    font_style: 'Display'
                    role: 'small'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor if app.current_pressure != '-99.9' else app.theme_cls.errorContainerColor
                    padding: [0] if app.language == 'EN' else ['72dp', 0, 0, 0]

        MDBoxLayout:
            adaptive_size: True
            orientation: 'horizontal'

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    id: run_cycles
                    text: app.translate('run_cycles', 'run cycles').upper()
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    id: current_cycle_count
                    text: app.current_run_cycle_count
                    font_style: 'Display'
                    role: 'small'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor
                    padding: ['122dp', 0, 0, 0] if app.language == 'EN' else [0]

        Widget:

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'center_x': .5}
        padding: '15dp'
        spacing: 0

        StatusBar:

    SideBar:
