#:kivy 2.3.0

<ShutdownScreen>
    md_bg_color: app.theme_cls.onPrimaryColor

    TopBar:

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'top': .975, 'center_x': .5}

        StatusBar:

    MDBoxLayout:
        adaptive_height: True
        size_hint_x: .687
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .53}
        spacing: '32dp'

        MDBoxLayout:
            adaptive_height: True
            orientation: 'vertical'
            pos_hint: {'center_x': .5}
            spacing: '12dp'
            padding: [0, 0, 0, '12dp']

            TestTextLabel:
                id: station_shutdown
                text: 'ALERT: STATION SHUTDOWN'
                font_style: 'Display'
                font_size: '24sp'
                text_color: app.theme_cls.onErrorContainerColor
                padding: [0, 0, 0, '12dp']

            TestTextLabel:
                id: shutdown_one
                text: 'YOUR STATION HAS BEEN SHUT DOWN DUE TO AN ALARM CONDITION.'
                font_size: '16sp'

            TestTextLabel:
                id: shutdown_two
                text: 'IMMEDIATE ACTION IS REQUIRED TO RESOLVE THE ISSUE.'
                font_size: '16sp'

            TestTextLabel:
                id: shutdown_three
                text: 'PLEASE CONTACT YOUR SERVICE CONTRACTOR FOR ASSISTANCE.'
                font_size: '16sp'

            TestTextLabel:
                id: shutdown_four
                text: 'FOR MORE DETAILS, CHECK THE ALARMS SCREEN.'
                font_size: '16sp'

    MDBoxLayout:
        id: alarm_container
        adaptive_size: True
        pos_hint: {'center_x': .5, 'center_y': .27}

    FullAccessIndicator:

    StatIndicator:

    VersionIndicator:

    SideBar:

