#:kivy 2.3.0

<CodeEntryScreen>
    md_bg_color: app.theme_cls.onPrimaryColor

    TopBar:

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'top': .975, 'center_x': .5}

        StatusBar:

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            adaptive_height: True
            size_hint_x: .7
            orientation: 'vertical'
            spacing: dp(15)
            pos_hint: {'center_x': .5}

            MDBoxLayout:
                adaptive_size: True
                pos_hint: {'center_x': .5}
                orientation: 'horizontal'
                padding: [0, 0, 0, dp(24)]

                MDTextField:
                    id: user_input_field
                    font_size: sp(27)
                    size_hint: None, None
                    width: dp(225)
                    radius: dp(5)
                    height: dp(50)
                    halign: 'center'
                    padding: [dp(6), dp(12), dp(6), dp(6)]
                    password: True

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(15)

            KeypadBtnContainer:

                KeypadBtn:
                    text: '1'
                    on_press: root.add_character(1)

                KeypadBtn:
                    text: '2'
                    on_press: root.add_character(2)

                KeypadBtn:
                    text: '3'
                    on_press: root.add_character(3)

                KeypadBtn:
                    text: '4'
                    on_press: root.add_character(4)

                KeypadBtn:
                    text: '5'
                    on_press: root.add_character(5)

                ActionKeyBtn:
                    icon: 'backspace'
                    size: '62dp', '49dp'
                    text_color: app.theme_cls.tertiaryColor
                    on_press: root.delete_character()

            KeypadBtnContainer:

                KeypadBtn:
                    text: '6'
                    on_press: root.add_character(6)

                KeypadBtn:
                    text: '7'
                    on_press: root.add_character(7)

                KeypadBtn:
                    text: '8'
                    on_press: root.add_character(8)

                KeypadBtn:
                    text: '9'
                    on_press: root.add_character(9)

                KeypadBtn:
                    text: '0'
                    on_press: root.add_character(0)

                ActionKeyBtn:
                    icon: 'check-bold'
                    size: '62dp', '49dp'
                    text_color: app.success_color
                    on_press: root.submit_code()

    StatIndicator:

    VersionIndicator:

    SideBar: