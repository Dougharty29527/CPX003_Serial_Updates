#:kivy 2.3.0

<KeypadScreen>
    MDScreen:
        md_bg_color: app.theme_cls.onPrimaryColor

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        spacing: '15dp'
        
        MDTextField:
            id: input_field
            mode: 'outlined'
            size_hint_x: None
            width: '240dp'
            # font_size: sp(32)
            # halign: 'center'
            padding: dp(12)
            password: False
            pos_hint: {'center_x': 0.5}

            MDTextFieldHintText:
                text: 'Enter Code'

        Widget:
            size_hint_y: None
            height: '10dp'
        
        MDBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': 0.5}
            # size_hint_y: None
            # height: dp(60)  # Fixed height for button row.
            spacing: '15dp'  # Spacing between buttons.

            KeyPadButton:
                on_press: root.add_digit(1)

                MDButtonText:
                    text: '1'

            KeyPadButton:
                on_press: root.add_digit(2)

                MDButtonText:
                    text: '2'

            KeyPadButton:
                on_press: root.add_digit(3)

                MDButtonText:
                    text: '3'

            KeyPadButton:
                on_press: root.add_digit(4)

                MDButtonText:
                    text: '4'

            KeyPadButton:
                on_press: root.add_digit(5)

                MDButtonText:
                    text: '5'

            KeyPadButton:
                on_press: root.backspace()

                MDButtonText:
                    text: 'Back'

        
        MDBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': 0.5}
            spacing: '15dp'  # Spacing between buttons.


            KeyPadButton:
                on_press: root.add_digit(6)

                MDButtonText:
                    text: '6'

            KeyPadButton:
                on_press: root.add_digit(7)

                MDButtonText:
                    text: '7'

            KeyPadButton:
                on_press: root.add_digit(8)

                MDButtonText:
                    text: '8'

            KeyPadButton:
                on_press: root.add_digit(9)

                MDButtonText:
                    text: '9'

            KeyPadButton:
                on_press: root.add_digit(0)

                MDButtonText:
                    text: '0'

            KeyPadButton:
                on_press: root.submit()

                MDButtonText:
                    id: submit
                    text: 'Enter'

    SideBar:



<KeyPadButton@MDButton>
    size_hint: None, None
    size: '60dp', '60dp'
    radius: 0
    # line_color: (1, 1, 1, .63)
    # line_width: 1
    # ripple_scale: 0