#:kivy 2.3.0

<MainScreen>
    md_bg_color: app.theme_cls.onPrimaryColor

    TopBar:
        id: main_screen
        screen_title: 'MAIN'

    MDBoxLayout:
        adaptive_size: True
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: '30dp'

        MDBoxLayout:
            adaptive_size: True
            orientation: 'horizontal'

            MDButton:
                style: 'text'
                disabled: True
                theme_width: 'Custom'
                width: '260dp'

                MDButtonText:
                    id: pressure
                    text: 'UST PRESSURE: '
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    text: app.current_pressure
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor if app.current_pressure != '-99.9' else app.theme_cls.errorContainerColor
                    padding: 0

        MDBoxLayout:
            adaptive_size: True
            orientation: 'horizontal'

            MDButton:
                style: 'text'
                disabled: True
                theme_width: 'Custom'
                width: '260dp'

                MDButtonText:
                    id: run_cycles
                    text: 'RUN CYCLES: '
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor

            MDButton:
                style: 'text'
                disabled: True

                MDButtonText:
                    text: app.current_run_cycle_count
                    font_style: 'Headline'
                    role: 'large'
                    theme_disabled_color: 'Custom'
                    disabled_color: app.theme_cls.onPrimaryContainerColor
                    padding: 0

        Widget:

    MDBoxLayout:
        adaptive_size: True
        pos_hint: {'center_x': .5}
        padding: '15dp'
        spacing: 0

        StatusBar:

    MDBoxLayout:
        adaptive_height: True
        padding: '16dp'
        pos_hint: {'bottom': 1, 'left': 1}

        MDLabel:
            text: app.debug_mode_string if app.debug else ''
            font_style: 'Title'
            role: 'medium'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.errorColor

    SideBar: