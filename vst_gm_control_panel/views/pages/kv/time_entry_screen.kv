<TimeEntryScreen>
    md_bg_color: app.theme_cls.onPrimaryColor

    TopBar:
        id: time_entry_screen
        screen_title: 'TIME ENTRY'

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            adaptive_height: True
            size_hint_x: .7
            orientation: 'vertical'
            spacing: '10dp'
            pos_hint: {'center_x': .5}

            MDBoxLayout:
                adaptive_size: True
                pos_hint: {'center_x': .5}
                orientation: 'horizontal'
                padding: [0, 0, 0, '24dp']

                MDButton:
                    style: 'outlined'
                    disabled: True
                    theme_width: 'Custom'
                    width: '150dp'
                    radius: '5dp'

                    MDButtonText:
                        id: time_input_field
                        text: root.time_input_string
                        font_style: 'Title'
                        role: 'large'
                        theme_disabled_color: 'Custom'
                        disabled_color: app.theme_cls.primaryColor
                        pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            adaptive_height: True
            size_hint_x: .7
            orientation: 'vertical'
            spacing: '10dp'
            pos_hint: {'center_x': .5}

            MDBoxLayout:
                adaptive_size: True
                pos_hint: {'center_x': .5}
                spacing: '10dp'
                orientation: 'horizontal' 

                DigitButton:
                    text: '1'
                    on_press: root.add_digit(1)

                DigitButton:
                    text: '2'
                    on_press: root.add_digit(2)

                DigitButton:
                    text: '3'
                    on_press: root.add_digit(3)

                DigitButton:
                    text: '4'
                    on_press: root.add_digit(4)

                DigitButton:
                    text: '5'
                    on_press: root.add_digit(5)

                MDButton:
                    radius: '5dp'
                    theme_width: 'Custom'
                    width: '90dp'
                    on_press: root.backspace()

                    MDButtonText:
                        id: back
                        text: 'BACK'
                        pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                adaptive_size: True
                pos_hint: {'center_x': 0.5}
                spacing: '10dp'
                orientation: 'horizontal' 

                DigitButton:
                    text: '6'
                    on_press: root.add_digit(6)

                DigitButton:
                    text: '7'
                    on_press: root.add_digit(7)

                DigitButton:
                    text: '8'
                    on_press: root.add_digit(8)

                DigitButton:
                    text: '9'
                    on_press: root.add_digit(9)

                DigitButton:
                    text: '0'
                    on_press: root.add_digit(0)

                MDButton:
                    radius: '5dp'
                    theme_width: 'Custom'
                    width: '90dp'
                    on_press: root.submit()

                    MDButtonText:
                        id: submit
                        text: 'SUBMIT'
                        pos_hint: {'center_x': .5, 'center_y': .5}

    MDBoxLayout:
        adaptive_height: True
        size_hint_x: .7
        orientation: 'vertical'
        pos_hint: {'center_x': .5}
        padding: [0, '30dp', 0, 0]

        MDBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': .5}
            orientation: 'horizontal'
            padding: [0, 0, 0, '24dp']

            MDButton:
                style: 'elevated'
                theme_width: 'Custom'
                width: '250dp'
                radius: '5dp'
                on_press: root.restore_default_time()

                MDButtonText:
                    id: restore_defaults
                    text: 'Restore Defaults'
                    pos_hint: {'center_x': .5, 'center_y': .5}

    SideBar:

<DigitButton@MDButton>:
    radius: '5dp'
    text: ''

    MDButtonText:
        text: root.text